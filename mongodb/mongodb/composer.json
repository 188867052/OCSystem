{
    "name": "mongodb/mongodb",
    "description": "MongoDB driver library",
    "keywords": ["database", "driver", "mongodb", "persistence"],
    "homepage": "https://jira.mongodb.org/browse/PHPLIB",
    "license": "Apache-2.0",
    "files": [
        "src/functions.php"
    ],
    "authors": [
        { "name": "Jeremy Mikola", "email": "jmikola@gmail.com" },
        { "name": "Derick Rethans", "email": "github@derickrethans.nl" },
        { "name": "Katherine Walker", "email": "katherine.walker@mongodb.com" }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "ext-hash": "*",
        "ext-json": "*",
        "ext-mongodb": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7.27 || ^6.4"
    },
    "autoload": {
        "psr-4": { "MongoDB\\": "src/" },
        "files": [ "src/functions.php" ]
    },
    "autoload-dev": {
        "psr-4": { "MongoDB\\Tests\\": "tests/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.5.x-dev"
        }
    }
}
